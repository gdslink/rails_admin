.dropdown {
    width: 100%;
}

.dropdown li:hover {
    text-decoration: underline;
    font-weight: bold !important;
}

.wrapper-dropdown {
    z-index: 99;
    background-image: url("<%=asset_path('rails_admin/logo.png')%>");
    background-repeat: no-repeat;
    background-position: 5px 5px;
    position: absolute;
    width: 250px;
    margin: 0 auto;
    padding: 10px 15px;
    background-color: #f2f2f2;
    border-left: 5px solid #4183C4;
    cursor: pointer;
    outline: none;
    left: 0;
    height: 29px;
}

.wrapper-dropdown:after {
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    right: 16px;
    top: 50%;
    margin-top: -3px;
    border-width: 6px 6px 0 6px;
    border-style: solid;
    border-color: grey transparent;
}

.wrapper-dropdown .dropdown {
    /* Size & position */
    position: absolute;
    top: 100%;
    left: -5px;
    right: 0px;

    /* Styles */
    background: #f3f3f3;
    list-style: none;

    /* Hiding */
    opacity: 0;
    pointer-events: none;
}

.wrapper-dropdown .dropdown.submenu {
    display: none;
    position: fixed;
    width: 175px;
    list-style: none;
}

.wrapper-dropdown .dropdown.submenu li a {
    background-color: #f3f3f3;
}

.wrapper-dropdown .dropdown li a {
    display: block;
    text-decoration: none;
    font-size: 12px;
    color: #333;
    border-left: 5px solid;
    border-right: 1px solid white;
    padding: 10px;
    font-weight: 400;
    border-right: 1px solid lightgray;
}

.wrapper-dropdown .dropdown li:nth-child(1) a {
    border-left-color: #00ACED;
    border-top: 1px solid lightgray;
}

.wrapper-dropdown .dropdown li:nth-child(2) a {
    border-left-color: #4183C4;
}

.wrapper-dropdown .dropdown li:nth-child(3) a {
    border-left-color: #3B5998;
}

.wrapper-dropdown .dropdown li:nth-child(4) a {
    border-left-color: #4183C4;
}

.wrapper-dropdown .dropdown li:nth-child(5) a {
    border-left-color: #3B5998;
}

.wrapper-dropdown .dropdown li:nth-child(6) a {
    border-left-color: #4183C4;
}

.wrapper-dropdown .dropdown li:nth-last-child(1) a {
    border-left-color: #3B5998;
    border-bottom: 1px solid lightgray;
}

.wrapper-dropdown .dropdown li i {
    margin-right: 5px;
    color: inherit;
    vertical-align: middle;
}

    /* Hover state */

.wrapper-dropdown .dropdown li:hover a {
    color: grey;
}

    /* Active state */

.wrapper-dropdown.active:after {
    border-width: 0 6px 6px 6px;
}

.wrapper-dropdown.active .dropdown {
    opacity: 1;
    pointer-events: auto;
}

    /* No CSS3 support */

.no-opacity       .wrapper-dropdown .dropdown,
.no-pointerevents .wrapper-dropdown .dropdown {
    display: none;
    opacity: 1; /* If opacity support but no pointer-events support */
    pointer-events: auto; /* If pointer-events support but no pointer-events support */
}

.no-opacity       .wrapper-dropdown.active .dropdown,
.no-pointerevents .wrapper-dropdown.active .dropdown {
    display: block;
}

