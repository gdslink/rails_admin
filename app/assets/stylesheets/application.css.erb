body,div,h,p,a,form,label,table,tbody,tr,td {
    margin: 0pt;
    padding: 0pt;
    border: 0pt none;
    outline: 0pt none;
    font-weight: inherit;
    font-style: inherit;
    font-size: 100%;
    font-family: inherit;
    vertical-align: baseline;
}

body {
    color: rgb(114, 114, 114);
    background: none repeat scroll 0% 0% rgb(236, 236, 236);
    font: 13px/18px Arial,Helvetica,sans-serif;
    height: 100%;
}

html {
    overflow-y: scroll;
}

body {
    height: 100%;
}

p {
    padding-bottom: 15px;
    padding-top: 15px;
    padding-left: 10px;
}

table {
    border-collapse: separate;
    border-spacing: 0pt;
}

td {
    text-align: left;
    font-weight: normal;
}

.clear {
    clear: both;
}

a {
    color: rgb(114, 114, 114);
    text-decoration: none;
}

#container {
    position: fixed;
    background: #f5f5f5;
    overflow: auto;
    width: 100%;
    height: 100%;
}

.centered-container {
  position: fixed;
  top: 40%;
  left: 15%;  
  width: 60%;
  margin: 0 auto;
  background-color: #FFF;
  padding: 20px 40px;
  border: 1px solid rgb(195, 195, 195);
  margin-top: 20px;
}


#main-login {
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -250px;
    margin-left: -250px;
    border: 1px solid rgb(195, 195, 195);
    background: rgb(255, 255, 255) url("<%=asset_path 'rails_admin/logo_large.png'%>") no-repeat 500px 10px;
    background-size: 50px;
    padding: 40px;
    font-size: 15px;
}

input {
    font-family: Verdana,"Lucida Grande","Lucida Sans Unicode",geneva,verdana,sans-serif;
    font-size: 15px;
}

.lg_log {
    width: 450px;
    border: 1px solid rgb(195, 195, 195);
    background: none repeat scroll 0% 0% rgb(244, 244, 244);
    padding: 10px 5px;
}

.small {
    font-size: 13px;
    font-weight: normal;
    color: rgb(76, 76, 76);
    font-style: italic;
    float: left;
    margin-bottom: 15px;
}

.head_title {
    margin-right: 10px;
    float: left;
    display: inline;
}

.vedit td {
    text-align: left;
    vertical-align: middle;
    padding: 15px 10px 10px 15px;
    font-size: 19px;
    color: rgb(0, 0, 0);
    font-weight: bold;
    font-family: Helvetica,Arial,sans-serif;
}

#flash-notice {
    color: green;
    background-color: #CFC;
    border: solid 1px #6C6;
    clear: both;
    width: auto;
    text-align: center;
    font-size: 16px;
    list-style-position: inside;
    padding: 10px;
}

#flash-alert {
    color: red;
    background-color: rgb(255, 204, 204);
    border: 1px solid rgb(204, 102, 102);
    clear: both;
    width: auto;
    text-align: center;
    font-size: 16px;
    list-style-position: inside;
    padding: 10px;
}

h2 {
    font-size: 18px;
}

a:hover {
    color: #000;
    text-decoration: none;
}

div.button {
    text-align: center;
}

.ra-button:hover {
    cursor: pointer;
}


.fieldWithErrors {
  display: inline;
}

.error-messages {
  width: 400px;
  border: 2px solid #CF0000;
  padding: 0px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  font-size: 12px;
  width: auto;
}

.error-messages h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 10px;
  font-size: 12px;
  margin: 0;
  background-color: #c00;
  color: #fff;
}

.error-messages p {
  margin: 8px 10px;
}

.error-messages ul {
  margin: 15px 0;
}
