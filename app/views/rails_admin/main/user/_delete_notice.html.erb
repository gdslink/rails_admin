<% object = delete_notice %>

<% #Factor out to controller
   model_config = RailsAdmin.config(@abstract_model)
%>
<ul class="items">
  <li>
    <%= @abstract_model.pretty_name %>: <%= link_to(model_config.with(:object => object).object_label, edit_path(current_scope_parameters.merge(:model_name => @abstract_model.to_param, :id => object.id))) %>
    <ul>
      <% @abstract_model.has_many_associations.each do |association| %>
          <% association[:name] == :old_passwords ? "" : object.send(association[:name]).reject{|child| child.nil?}.each do |child| %>
              <% next if !child.id %>
              <li>
                <%=t('admin.delete.one_or_more', :model_name => @abstract_model.pretty_name.pluralize.downcase, :association_name => association[:pretty_name].downcase )%>: <%= link_to(RailsAdmin.config(child).with(:object => child).object_label, edit_path(current_scope_parameters.merge(:model_name => association[:name].to_s.singularize.to_sym, :id => child.id))) %>
              </li>
          <% end %>
      <% end %>
      <% @abstract_model.has_one_associations.each do |association| %>
          <% child = object.send(association[:name]) %>
          <% next if child.nil? %>
          <li>
            <%=t('admin.delete.one', :model_name => @abstract_model.pretty_name.downcase, :association_name => association[:pretty_name].downcase)%>: <%= link_to(RailsAdmin.config(child).with(:object => child).object_label, edit_path(current_scope_parameters.merge(:model_name => association[:name], :id => child.id))) %>
          </li>
      <% end %>
    </ul>
  </li>
</ul>