<% content_for :head do %>
  <title><%= @abstract_model.pretty_name %> | <%= @plugin_name %></title>
<% end %>
<% content_for :breadcrumb do %>
  <li><%= home_link %></li>
  <li>&rsaquo; <%= link_to(t('admin.dashboard.name'), rails_admin_dashboard_path) %></li>
  <% if @history %>
    <li>&rsaquo; <%= link_to(@model_config.label, rails_admin_list_path(:model_name => @abstract_model.to_param)) %></li>
    <li>&rsaquo; <span>History</span></li>
  <% else %>
    <li>&rsaquo; <span><%= @model_config.label %></span></li>
  <% end%>
<% end %>

<%= render(:partial => 'layouts/rails_admin/head') %>
<body>
  <div id="wrapper">
    <%= render(:partial => 'layouts/rails_admin/header') %>    
    <%if @scope and @scope.length > 0 && @scope[@scope_adapter.models.last.name][:entries].length == 0 %>
      <%= render :partial => 'rails_admin/main/no_content'%>
    <%else%>
      <div id="splitter">    
        <%= render(:partial => 'rails_admin/main/navigation') %>
        <div id="content">
    <%= content_for(:layout) %>
        </div>
      </div>
    <%end%>
  </div>
</body>
</html>
